Name:                urllogs
Version:             0.0.1
Synopsis:            Parse ipoque urllogs
-- Description:         
License:             GPL-3
License-file:        LICENSE
Author:              Arthur Clune
Maintainer:          arthur@clune.org
Copyright:           Arthur Clune 2012
Category:            Testing
Build-type:          Custom
-- Extra-source-files:  
Cabal-version:       >=1.2

flag optimize
  description: Enable optimizations
  default:     True

Executable urllogs
  Main-is: urllogs.hs
  Build-depends: base, zlib, attoparsec, bytestring
  ghc-options: -Wall
  if flag(optimize)
    ghc-options: -O2 -funfolding-use-threshold=16 -optc-O3 -optc-ffast-math -funbox-strict-fields -fdicts-cheap -fspec-constr

Executable run-ipoque-tests
  Main-is: IpoqueLogTests.hs
  Build-depends: base, zlib, attoparsec, bytestring, HUnit

Executable run-squid-tests
  Main-is: AccessLogTests.hs
  Build-depends: base, zlib, attoparsec, bytestring, HUnit

library
    Exposed-Modules: IpoqueLog, AccessLog
    Other-modules:   AJCUtils
    Build-depends:   base, bytestring, attoparsec
    ghc-options: -Wall
    if flag(optimize)
      ghc-options: -O2 -funfolding-use-threshold=16 -optc-O3 -optc-ffast-math -funbox-strict-fields -fdicts-cheap -fspec-constr
